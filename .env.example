# FinBrief Environment Configuration Example
# Copy this file to .env and customize for your deployment

# ======================================
# CORE APPLICATION SETTINGS
# ======================================

# Environment (development|production|test)
ENVIRONMENT=production

# Application secrets
SECRET_KEY=your-super-secret-jwt-key-change-in-production-must-be-32-chars-long
OPENAI_API_KEY=your-openai-api-key-here

# ======================================
# DATABASE CONFIGURATION
# ======================================

# PostgreSQL connection details
POSTGRES_DB=finbrief_prod
POSTGRES_USER=finbrief
POSTGRES_PASSWORD=finbrief_secure_password_change_me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full database URI (auto-generated from above in Docker)
DATABASE_URI=postgresql://finbrief:finbrief_secure_password_change_me@postgres:5432/finbrief_prod

# ======================================
# SERVER CONFIGURATION
# ======================================

# API server settings
API_PORT=8000
API_WORKERS=2
HOST=0.0.0.0

# Nginx proxy ports
HTTP_PORT=80
HTTPS_PORT=443

# ======================================
# LOGGING & MONITORING
# ======================================

# Log level (DEBUG|INFO|WARNING|ERROR|CRITICAL)
LOG_LEVEL=INFO

# Metrics retention
METRICS_RETENTION_HOURS=72
METRICS_FLUSH_INTERVAL=60

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ======================================
# CRAWLER CONFIGURATION
# ======================================

# Enable automatic news crawling
ENABLE_SCHEDULER=true

# Crawling interval in minutes
PIPELINE_INTERVAL_MINUTES=30

# ======================================
# REDIS CONFIGURATION (OPTIONAL)
# ======================================

# Redis for caching and background tasks
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ======================================
# EXTERNAL SERVICES
# ======================================

# News sources API keys (if required)
# BLOOMBERG_API_KEY=your-bloomberg-api-key
# REUTERS_API_KEY=your-reuters-api-key

# ======================================
# MONITORING STACK (OPTIONAL)
# ======================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_password_change_me

# ======================================
# SECURITY SETTINGS
# ======================================

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API rate limits
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# ======================================
# PERFORMANCE TUNING
# ======================================

# Database connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Worker settings
WORKER_TIMEOUT=30
WORKER_KEEPALIVE=5

# ======================================
# FEATURE FLAGS
# ======================================

# Enable/disable features
ENABLE_VECTOR_SEARCH=true
ENABLE_ENHANCED_NLP=true
ENABLE_MONITORING_API=true
COLLECT_SYSTEM_METRICS=true

# ======================================
# DEVELOPMENT SETTINGS
# ======================================

# Development-specific settings (only used when ENVIRONMENT=development)
DEV_RELOAD=true
DEV_LOG_LEVEL=DEBUG
DEV_CONSOLE_OUTPUT=true

# ======================================
# BUILD INFORMATION
# ======================================

# Docker build arguments
BUILD_DATE=
VCS_REF=